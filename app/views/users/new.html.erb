<section class="users-new">

  <header class="page-header">
    <h1>New User Sign-Up</h1>
  </header>

  <div class="well">
    <%= link_to 'View Products', [:products], class: 'btn btn-info' %>
  </div>

  <div class="row">
    <div class="col-sm-6 col-sm-offset-1">
      <%= form_for(:user, url: signup_path) do |form| %>

        <% if @user.errors.any? %>
        <div class="alert alert-danger">
          <strong>The following errors prevented saving:</strong>
          <ul>
            <% @user.errors.full_messages.each do |error| %>
              <li><%= error %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

        <div class="form-group">
          <%= form.label :first_name %>
          <%= form.text_field :first_name, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= form.label :last_name %>
          <%= form.text_field :last_name, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= form.label :email %>
          <%= form.text_field :email, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= form.label :password %>
          <%= form.text_field :password, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= form.label :password_confirmation %>
          <%= form.text_field :password_confirmation, class: 'form-control' %>
        </div>

        <%= form.submit 'Sign Up', class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>

</section>
