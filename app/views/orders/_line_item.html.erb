<% if product = Product.find_by(id: product_id) %>
<tr>
  <td>
    <%= image_tag product.image.tiny %>
  </td>
  <td>
    <h4><%= product.name %></h4>
    <br>
    <p><%= product.description %></p>
  </td>
  <td>
    $<%= product.price %>
  </td>
  <td>
  <%= product_quantity %>
</td>
  <td>
    $<%= item_total / 100.00%>
  </td>
</tr>
<% end %>