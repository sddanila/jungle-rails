<section class="orders-show">

  <header class="page-header">
    <h1>Order #<%= @order.id %></h1>
  </header>

  <div class="order-summary jumbotron">
    <h4>Thank you for your order!</h4>
    <em><h6>A confirmation email has been sent to <%= @order.email%>!</h6></em>
  </div>

  <div class="panel panel-default items">
  <table class="table table-bordered">
    <thead>
      <tr>
        <th colspan="2">Product</th>
        <th>Unit Price</th>
        <th>Quantity</th>
        <th>Price</th>
      </tr>
    </thead>
    <tbody>
      <% @line_items.each do |line_item| %>
        <%= render 'line_item', product_id: line_item.product_id, item_total: line_item.total_price_cents.to_i, product_quantity: line_item.quantity%>
      <% end %>
    </tbody>
    <tfoot>
      <tr>
        <th colspan="4">
          TOTAL:
        </th>
        <th>
          $<%= @order.total_cents / 100.0 %>
        </th>
      </tr>
    </tfoot>
  </table>
</div>

  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>

</section>
